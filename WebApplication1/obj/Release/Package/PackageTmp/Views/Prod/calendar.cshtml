            $.ajax({
                type: 'POST',
                url: '@Url.Action("calendar", "Prod")',
                data: {
                    fCID : $('#fCID').val(),
                    ArrGetNewTime: $('#addtime').val(),
                    ArrGetDeletedTime: $('#canceltime').val()
                },
                dataType: 'json',
                    success: function (data, status, xhr) {
                        $("#savesuccess").show().delay(1000).hide(300);
                    },
                    error: function (xhr, textstatus, data) {
                        alert(data);
                    }
                })

        })*@

        @if (TempData[WebApplication1.Models.Common.CDictionary.TK_Msg_SaveCalendar] != null)
        {
            @:$("#savesuccess").show().delay(1000).hide(300);
        }

    </script>
}
